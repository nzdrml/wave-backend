#routes.col-md-12
  = link_to '+ New Route', [:new, :route], :class => 'btn btn-outline-primary'

  %br
  %br

  %table.table.table-striped
    %thead.bg-primary
      %tr
        %th ID
        %th Pickup
        %th Drop off
        %th Schedules
        %th Price
        %th
        %th
    %tbody
      - Route.all.each do |route|
        %tr
          %td= route.id
          %td= route.origin.name
          %td= route.destination.name
          %td
            %strong= route.schedules.pluck(:time).join('<br>').html_safe
          %td= number_to_currency route.price, :unit => 'Php '
          %td= link_to 'Edit', [:edit, route]
          %td= link_to 'Delete', route, :method => :delete, :data => { :confirm => 'Are you sure?' }
