#users.col-md-12
  = link_to '+ New User', [:new, :user], :class => 'btn btn-outline-primary'

  %br
  %br

  %table.table.table-striped
    %thead.bg-primary
      %tr
        %th ID
        %th Name
        %th Phone
        %th Balance
        %th
        %th
        %th
    %tbody
      - users.each do |user|
        %tr
          %td= user.id
          %td= user
          %td= user.phone
          %td= user.balance
          %td
            = button_tag 'Top up', :class => 'btn btn-outline-primary top-up'
            = form_tag [:top_up, user], :method => :post, :class => 'form top-up-form' do
              .col-md-5= text_field_tag :amount, nil, :placeholder => 'Amount', :class => 'form-control'
              = submit_tag 'Done', :class => 'btn btn-success'
              = button_tag 'Cancel', :class => 'btn btn-outline-danger top-up-cancel'
          %td= link_to 'Edit', [:edit, user]
          %td= link_to 'Delete', user, :method => :delete, :data => { :confirm => 'Are you sure?' }
