= form_for @form, :html => {:class => 'form'} do |f|
  .form-fields.container
    .row
      .col-md-8.offset-md-2
        .form-group.col-md-12
          = f.label :make, :class => 'control-label col-md-3'
          .col-md-9= f.text_field :make, :placeholder => 'Make', :class => 'form-control'
        .form-group.col-md-12
          = f.label :plate, :class => 'control-label col-md-3'
          .col-md-9= f.text_field :plate, :placeholder => 'Latitude', :class => 'form-control'
        .form-group.col-md-12
          = f.label :driver, :class => 'control-label col-md-3'
          .col-md-9= f.select :driver_id, options_from_collection_for_select(User.drivers.decorate, 'id', 'to_s', @form.driver_id), {:include_blank => 'None'}, {:class => 'form-control'}
        .form-group.col-md-12.submit-button
          .col-md-3.offset-md-3= f.submit 'Save', :class => 'btn btn-primary col-md-12'
          .col-md-3= link_to 'Cancel', :vehicles, :class => 'btn btn-outline-danger col-md-12'
